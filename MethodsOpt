#include "iostream"
using namespace std;

float funct(float bet) {

	return 1 - 2 * sin(bet) * sin(bet) - sin(bet);
}

void main() {
	double pi = 3.1415926535;
	float a = 0, R;
	float eps = 0.001;
	float b = 1.57;
	float si = 0.5;
	int iter = 0;
	while ((a + b) / 2 > eps && iter < 1000) {
		float mid = (a + b) / 2;

		if (funct(mid - si) > funct(si + mid)) {
			a = mid - si;
		}
		else {
			b = mid + si;
		}
		iter++;
	}
	cout << (a + 1.57)*180/3.14 << endl;

	system("pause");
}

22.18

#include "stdafx.h"
#include "iostream"
using namespace std;

float funct(float R, float x) {
	return 3 * x * sqrt(R - (1 / 3) * x * x) - x * x * x / (2 * sqrt(R - (1 / 3) * x * x));
}

void main() {
	double pi = 3.1415926535;
	float a = 0;
	float R;
	cin >> R;
	float eps = 0.001;
	float b = 10 * R;
	float si = 0.5;
	int iter = 0;
	while ((a + b) / 2 > eps && iter < 1000) {
		float mid = (a + b) / 2;

		if (funct(mid - si, R) > funct(si + mid, R)) {
			a = mid - si;
		}
		else {
			b = mid + si;
		}
		iter++;
		cout << a << " " << b << endl;
	}
	cout << a << " " << b << endl;

	system("pause");
}
